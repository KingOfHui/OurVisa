<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        app:indicator_drawable_selected="@drawable/shape_indicator_selected"
        app:indicator_drawable_unselected="@drawable/shape_indicator_unselected"
        app:indicator_width="10dp"
        app:indicator_height="10dp"
        app:indicator_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>
    <Button
        android:id="@+id/sign_visa"
        android:textColor="@color/white_fafa"
        android:textSize="@dimen/T1"
        android:text="@string/sign_visa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/double_visa"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:layout_width="0dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/double_visa"
        android:textColor="@color/white_fafa"
        android:textSize="@dimen/T1"
        android:text="@string/double_visa"
        app:layout_constraintLeft_toRightOf="@id/sign_visa"
        app:layout_constraintRight_toLeftOf="@id/visa_doc"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_margin="10dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:layout_width="0dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/visa_doc"
        android:textColor="@color/white_fafa"
        android:textSize="@dimen/T1"
        android:text="@string/visa_doc"
        app:layout_constraintLeft_toRightOf="@id/double_visa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:layout_width="0dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/help_center"
        android:textColor="@color/white_fafa"
        android:textSize="@dimen/T1"
        android:text="@string/help_center"
        app:layout_constraintLeft_toLeftOf="@id/sign_visa"
        app:layout_constraintRight_toRightOf="@id/sign_visa"
        app:layout_constraintTop_toBottomOf="@id/sign_visa"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:layout_width="0dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/about"
        android:textColor="@color/white_fafa"
        android:textSize="@dimen/T1"
        android:text="@string/about"
        app:layout_constraintLeft_toRightOf="@id/sign_visa"
        app:layout_constraintRight_toLeftOf="@id/visa_doc"
        app:layout_constraintTop_toBottomOf="@id/sign_visa"
        android:layout_margin="10dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:layout_width="0dp"
        android:layout_height="100dp" />
</android.support.constraint.ConstraintLayout>