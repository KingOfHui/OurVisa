<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_cv_visa_diplomatic_mission"
        style="@style/touchWaterRippleStyle"
        android:layout_marginLeft="@dimen/visa_item_padding_horizontal"
        android:layout_marginRight="@dimen/visa_item_padding_horizontal"
        android:layout_marginTop="@dimen/visa_item_padding_vertical"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv_visa_diplomatic_mission"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="@dimen/T0"
            android:layout_gravity="center"
            android:text="@string/visa_foreign_affairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_visa_diplomatic_mission"
        style="@style/touchWaterRippleStyle"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_cv_visa_diplomatic_mission"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginLeft="@dimen/visa_item_padding_horizontal"
        android:layout_marginRight="@dimen/visa_item_padding_horizontal"
        android:layout_marginTop="@dimen/visa_item_padding_vertical"
        android:layout_marginBottom="@dimen/visa_item_padding_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="@dimen/T0"
            android:layout_gravity="center"
            android:text="@string/visa_diplomatic_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>